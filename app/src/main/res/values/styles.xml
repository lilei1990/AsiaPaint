<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color_2F54CC</item>
        <item name="colorAccent">@color/color_999999</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 大标题 特殊场景-->
    <style name="HeadlineStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 一级标题 导航，标题，发票价格，页面名称-->
    <style name="TitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 二级标题 底部导航标题，卡片标题，元素标题-->
    <style name="SubTitleStyle">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 三级标题 筛选，搜索，弹窗，卡片二级标题-->
    <style name="ChildTitleStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 正文 正文，商品描述，按钮文字-->
    <style name="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 正文 正文，描述性文字，文章正文-->
    <style name="SubTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- 辅助文字 最小字号，辅助性文字，toast提示文字-->
    <style name="SupportTextStyle">
        <item name="android:textSize">6sp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="BottomToTop" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/anim_top_to_bottom</item>
    </style>

    <style name="CouponTabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FindTabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OnePxActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 窗体背景颜色为透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 窗体没有边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 窗体不包含标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 窗体悬浮 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 自定义TitleBar时去掉多余的阴影-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 不允许窗体背景变暗-->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 窗体切换无动画-->
        <item name="android:windowAnimationStyle">@null</item>
        <!-- 禁用窗口的预览动画-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 通用底部PopupWindow动画效果 -->
    <style name="PopupwindowStyle">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/popupwindow_hidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!--底部popupWindow弹框-->
    <style name="popwindowBottomAnimStyle">
        <item name="android:windowEnterAnimation">@anim/anim_enter_bottom</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/anim_exit_bottom</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- ChinaPay plugin begin -->
    <style name="cp_Animation" parent="android:Theme.Light">
        <item name="android:windowAnimationStyle">@style/cp_AnimationActivity</item>
    </style>

    <style name="cp_AnimationActivity">
        <item name="android:activityOpenEnterAnimation">@anim/cpay_push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/cpay_push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/cpay_slide_up_in</item>
        <item name="android:activityCloseExitAnimation">@anim/cpay_slide_down_out</item>
    </style>
