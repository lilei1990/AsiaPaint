<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_common_gradient"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="11dp"
            android:paddingBottom="11dp">

            <TextView
                android:id="@+id/tv_shop_search"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:background="@drawable/bg_shop_search"
                android:drawableLeft="@mipmap/ic_shop_search"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="亚士漆精品油漆"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColorHint="@color/color_ACACAC"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_shop_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_shop_logo"
                android:drawablePadding="17dp"
                android:gravity="center_vertical"
                android:hint="400-0000-937"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColorHint="@color/color_FFFFFF" />
            <ImageView
                android:id="@+id/iv_scan_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/layout_msg"
                android:layout_toStartOf="@+id/iv_mine_setting"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:src="@mipmap/ico_scan_white" />
            <ImageView
                android:id="@+id/iv_shop_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:src="@mipmap/ic_shop_share" />
        </LinearLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F8F8F8">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="vertical"
                app:elevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="149dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_bg_top" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginEnd="14dp"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="7dp">

                            <com.asia.paint.banner.Banner
                                android:id="@+id/view_banner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:image_scale_type="fit_xy"
                                app:indicator_height="7dp"
                                app:indicator_width="7dp" />

                        </com.google.android.material.card.MaterialCardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="132dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginEnd="14dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:id="@+id/ll_shop_flash_sale"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="14dp"
                                        android:layout_marginTop="16dp"
                                        android:gravity="bottom"
                                        android:orientation="horizontal"
                                        android:visibility="visible">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="秒杀专区"
                                            android:textColor="@color/color_333333"
                                            android:textSize="16dp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="3dp"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal"
                                            android:visibility="gone">

                                            <TextView
                                                android:id="@+id/tv_shop_hour1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="7dp"
                                                android:background="@drawable/bg_rectangle_f41021_4"
                                                android:gravity="center"
                                                android:paddingLeft="3px"
                                                android:paddingTop="0px"
                                                android:paddingRight="3px"
                                                android:paddingBottom="0px"
                                                android:text="12"
                                                android:textColor="@color/color_FFFFFF"
                                                android:textSize="10dp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2dp"
                                                android:gravity="center"
                                                android:text=":"
                                                android:textColor="@color/color_F41021"
                                                android:textSize="10dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_shop_minute1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2dp"
                                                android:background="@drawable/bg_rectangle_f41021_4"
                                                android:gravity="center"
                                                android:paddingLeft="3px"
                                                android:paddingTop="0px"
                                                android:paddingRight="3px"
                                                android:paddingBottom="0px"
                                                android:text="58"
                                                android:textColor="@color/color_FFFFFF"
                                                android:textSize="10dp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2dp"
                                                android:gravity="center"
                                                android:text=":"
                                                android:textColor="@color/color_F41021"
                                                android:textSize="10dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_shop_second1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2dp"
                                                android:background="@drawable/bg_rectangle_f41021_4"
                                                android:gravity="center"
                                                android:paddingLeft="3px"
                                                android:paddingTop="0px"
                                                android:paddingRight="3px"
                                                android:paddingBottom="0px"
                                                android:text="21"
                                                android:textColor="@color/color_FFFFFF"
                                                android:textSize="10dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="16dp"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:visibility="visible">

                                        <ImageView
                                            android:id="@+id/iv_miaosha"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@mipmap/ic_default"
                                            android:visibility="visible" />

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:src="@mipmap/ic_shop_example"
                                            android:visibility="gone" />

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:src="@mipmap/ic_shop_example"
                                            android:visibility="gone" />
                                    </LinearLayout>
                                </LinearLayout>

                                <View
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginBottom="6dp"
                                    android:background="@color/color_F5F5F5" />

                                <LinearLayout
                                    android:id="@+id/ll_shop_group"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="14dp"
                                        android:layout_marginTop="16dp"
                                        android:gravity="bottom"
                                        android:orientation="horizontal"
                                        android:visibility="visible">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="拼团专区"
                                            android:textColor="@color/color_333333"
                                            android:textSize="16dp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="3dp"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tv_shop_hour2"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="7dp"
                                                android:background="@drawable/bg_rectangle_f41021_4"
                                                android:gravity="center"
                                                android:paddingLeft="3px"
                                                android:paddingTop="0px"
                                                android:paddingRight="3px"
                                                android:paddingBottom="0px"
                                                android:text="12"
                                                android:textColor="@color/color_FFFFFF"
                                                android:textSize="10dp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2dp"
                                                android:gravity="center"
                                                android:text=":"
                                                android:textColor="@color/color_F41021"
                                                android:textSize="10dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_shop_minute2"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2dp"
                                                android:background="@drawable/bg_rectangle_f41021_4"
                                                android:gravity="center"
                                                android:paddingLeft="3px"
                                                android:paddingTop="0px"
                                                android:paddingRight="3px"
                                                android:paddingBottom="0px"
                                                android:text="58"
                                                android:textColor="@color/color_FFFFFF"
                                                android:textSize="10dp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2dp"
                                                android:gravity="center"
                                                android:text=":"
                                                android:textColor="@color/color_F41021"
                                                android:textSize="10dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_shop_second2"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2dp"
                                                android:background="@drawable/bg_rectangle_f41021_4"
                                                android:gravity="center"
                                                android:paddingLeft="3px"
                                                android:paddingTop="0px"
                                                android:paddingRight="3px"
                                                android:paddingBottom="0px"
                                                android:text="21"
                                                android:textColor="@color/color_FFFFFF"
                                                android:textSize="10dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="16dp"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:visibility="visible">

                                        <ImageView
                                            android:id="@+id/iv_pintuan"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:visibility="visible"
                                            tools:src="@mipmap/ic_default" />

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:src="@mipmap/ic_shop_example"
                                            android:visibility="gone" />

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:src="@mipmap/ic_shop_example"
                                            android:visibility="gone" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/ll_shop_combination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="14dp"
                            android:background="@drawable/bg_rectangle_ffffff_8"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_mine_recommend"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/iv_zuhegou"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitXY"
                                    tools:src="@mipmap/ic_shop_group" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="11dp"
                    app:tabBackground="@drawable/bg_tab_goods_selector"
                    app:tabIndicator="@null"
                    app:tabMinWidth="0dp"
                    app:tabMode="scrollable"
                    app:tabPaddingEnd="11dp"
                    app:tabPaddingStart="11dp"
                    app:tabRippleColor="@color/color_transparent"
                    app:tabSelectedTextColor="@color/color_FFFFFF"
                    app:tabTextColor="@color/color_333333" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view_point1"
                        android:layout_width="20dp"
                        android:layout_height="1dp"
                        android:background="@color/color_2F54CC" />

                    <View
                        android:id="@+id/view_point2"
                        android:layout_width="20dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/color_999999" />

                    <View
                        android:id="@+id/view_point3"
                        android:layout_width="20dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/color_999999" />
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            </androidx.viewpager.widget.ViewPager>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>
</layout>