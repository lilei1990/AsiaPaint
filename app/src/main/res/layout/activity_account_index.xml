<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F8F8F8"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="支付宝账户设置"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/layout_zhi_fu_bao"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_FFFFFF"
            android:gravity="center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp">

            <TextView
                android:id="@+id/tv_zhi_fu_bao_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="暂无，点击设置"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_edit_2" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="银行卡设置（仅保存卡号，联系客户提现）"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/layout_bank_account"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_FFFFFF"
            android:gravity="center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp">

            <TextView
                android:id="@+id/tv_bank_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="暂无，点击设置"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_edit_2" />
        </LinearLayout>
    </LinearLayout>
</layout>