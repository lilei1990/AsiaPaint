<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FFFFFF">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:padding="14dp"
            android:src="@mipmap/ic_delete" />

        <TextView
            android:id="@+id/tv_tips_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="请输入支付密码"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <View
            android:id="@+id/view_divider_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_tips_1"
            android:layout_marginTop="16dp"
            android:background="@color/color_DBDBDB" />

        <TextView
            android:id="@+id/tv_tips_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tips_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="提现"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/layout_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tips_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_score_to_cash"
                android:textColor="@color/color_333333"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0.00"
                android:textColor="@color/color_333333"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layout_money"
            android:layout_marginStart="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="50dp"
            android:background="@color/color_DBDBDB" />

        <TextView
            android:id="@+id/tv_to_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_divider"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:text="0.0"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_to_money_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_divider"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:text="换算人民币"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_to_money"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:text="0.0"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_to_money_tips"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="税费"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <com.asia.paint.base.widgets.PasswordInputView
            android:id="@+id/view_pwd"
            android:layout_width="252dp"
            android:layout_height="42dp"
            android:layout_below="@+id/tv_tax"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="19dp"
            android:background="@null"
            android:cursorVisible="false"
            android:inputType="number"
            android:maxLength="6"
            app:borderColor="@color/color_DBDBDB"
            app:borderRadius="0dp"
            app:borderWidth="1dp"
            app:passwordColor="@color/color_000000"
            app:passwordLength="6"
            app:passwordWidth="6dp" />
    </RelativeLayout>
</layout>