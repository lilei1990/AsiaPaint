<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_DBDBDB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_go_shop"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_shop_normal"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/color_666666"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_to_customer_service"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_service"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="客服"
                android:textColor="@color/color_666666"
                android:textSize="9sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_go_cart"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@mipmap/ic_cart_normal"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="购物车"
                    android:textColor="@color/color_666666"
                    android:textSize="9sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_red_dot"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_red_dot"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="9sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_add_cart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_333333"
                android:text="加入购物车"
                android:textColor="@color/color_FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_F41021"
                android:text="立即购买"
                android:textColor="@color/color_FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</layout>