<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="223dp"
                android:layout_height="40dp"
                android:layout_marginTop="34dp"
                android:background="@drawable/bg_common_border_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="会议号"
                    android:textColor="@color/color_1369D7"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_meeting_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@null"
                    android:hint="请输入会议号"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_DBDBDB"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_find_meeting"
                android:layout_width="169dp"
                android:layout_height="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_btn_dialog_message_sure"
                android:text="查找会议"
                android:textColor="@color/color_FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>