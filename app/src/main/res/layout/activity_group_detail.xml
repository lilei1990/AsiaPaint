<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F8F8F8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_rectangle_ffffff_8"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingTop="14dp"
                android:paddingEnd="14dp">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_default" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/iv_icon"
                    android:text="亚士漆精品亚士漆亚士漆精品亚士亚士漆精品亚士漆亚士漆精品亚士亚士漆精品亚士漆亚士漆精品亚士亚士漆精品亚士漆亚士漆精品亚士亚士漆精品亚士漆亚士漆精品亚士亚士漆精品亚士漆亚士漆精品亚士亚士漆精品亚士漆亚士漆精品亚士亚士漆精品亚士漆亚士漆精品亚士"
                    android:textColor="@color/color_333333"
                    tools:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_name"
                    android:layout_alignStart="@+id/tv_name"
                    android:layout_alignBottom="@id/iv_icon"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:text="拼团价"
                            android:textColor="@color/color_F41021"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_price_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            tools:text="¥105.00"
                            android:textColor="@color/color_F41021"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:text="单买价"
                            android:textColor="@color/color_999999"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            tools:text="¥105.00"
                            android:textColor="@color/color_999999"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_group_detail_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        tools:src="@mipmap/ic_checkbox_selected" />

                    <TextView
                        android:id="@+id/tv_group_detail_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        tools:text="恭喜您拼团成功！已有2人跟团购买"
                        android:textColor="@color/color_333333"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_pintuan_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="2dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shop_hour1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/bg_rectangle_f41021_4"
                        android:gravity="center"
                        android:paddingLeft="3px"
                        android:paddingTop="0px"
                        android:paddingRight="3px"
                        android:paddingBottom="0px"
                        android:text="12"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/color_F41021"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_shop_minute1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/bg_rectangle_f41021_4"
                        android:gravity="center"
                        android:paddingLeft="3px"
                        android:paddingTop="0px"
                        android:paddingRight="3px"
                        android:paddingBottom="0px"
                        android:text="58"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/color_F41021"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_shop_second1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/bg_rectangle_f41021_4"
                        android:gravity="center"
                        android:paddingLeft="3px"
                        android:paddingTop="0px"
                        android:paddingRight="3px"
                        android:paddingBottom="0px"
                        android:text="21"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_group_detail_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@color/color_FFFFFF"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:paddingBottom="14dp"
                android:scrollbars="none"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_group_detail"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_common_gradient_4"
                android:gravity="center"
                tools:text="查看订单"
                android:textColor="@color/color_FFFFFF"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/ll_group_detail_rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:background="@color/color_FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_group_detail_rules_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="拼团规则"
                    android:paddingLeft="10dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/color_666666"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_group_detail_rules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    tools:text="2人拼团-人满发货-不满退款"
                    android:textColor="@color/color_666666"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>