<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F8F8F8"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:background="@color/color_FFFFFF"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="30dp"
                android:paddingEnd="30dp">

                <TextView
                    android:id="@+id/tv_service_schedule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_service_schedule"
                    android:drawablePadding="11dp"
                    android:gravity="center"
                    android:text="我的预约"
                    android:visibility="gone"
                    android:textColor="@color/color_service_schedule_selector"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_service_post"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_service_post"
                    android:drawablePadding="11dp"
                    android:gravity="center"
                    android:text="我的发布"
                    android:textColor="@color/color_service_post_selector"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_service_follow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_service_follow"
                    android:drawablePadding="11dp"
                    android:gravity="center"
                    android:text="我的关注"
                    android:textColor="@color/color_service_follow_selector"
                    android:textSize="12sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.asia.paint.base.widgets.NoScrollViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>