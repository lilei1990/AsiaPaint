<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                app:tabIndicatorColor="@color/color_1256CC"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="2dp"
                app:tabRippleColor="@color/color_transparent"
                app:tabSelectedTextColor="@color/color_1256CC"
                app:tabTextAppearance="@style/FindTabLayoutTextStyle"
                app:tabTextColor="@color/color_333333" />
        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>
</layout>