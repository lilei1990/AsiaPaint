<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F8F8F8"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_dialog_message"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="我的积分"
                    android:textColor="@color/color_1054CB"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_1054CB"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="可用于商城交易，也可直接提现"
                    android:textColor="@color/color_999999"
                    android:textSize="9sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="16dp"
                    android:text="10积分=1RMB"
                    android:textColor="@color/color_999999"
                    android:textSize="9sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="发票存量"
                    android:textColor="@color/color_1054CB"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_receipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/color_1054CB"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="可用于税费抵扣"
                    android:textColor="@color/color_999999"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_tax_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="16dp"
                    android:text="《税费说明》"
                    android:textColor="@color/color_1054CB"
                    android:textSize="9sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_to_money"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="51dp"
            android:background="@drawable/bg_common_gradient_4"
            android:text="积分提现"
            android:textColor="@color/color_FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_record"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_common_border_tran_4"
            android:text="申请记录"
            android:textColor="@color/color_1054CB"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_score_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="14dp"
            android:text="《积分说明》"
            android:textColor="@color/color_1054CB"
            android:textSize="12sp" />
    </LinearLayout>
</layout>