apply plugin: 'com.android.application'
apply from: "${project.rootDir}/android.gradle"

android {

    defaultConfig {
        applicationId "com.asia.paint.android"
    }

    signingConfigs {
        release {
            storeFile file('../asia.jks')
            storePassword 'asia123'
            keyAlias "asia"
            keyPassword 'aisa123'
        }

        debug {
            storeFile file('../asia.jks')
            storePassword "asia123"
            keyAlias "asia"
            keyPassword "asia123"
        }
    }

    buildTypes {
        debug {
            minifyEnabled false
            shrinkResources false
            signingConfig signingConfigs.debug
            proguardFiles getDefaultProguardFile('proguard-android-optimize.txt'), 'proguard-rules.pro'
        }

        release {
            minifyEnabled false
            shrinkResources false
            signingConfig signingConfigs.release
            proguardFiles getDefaultProguardFile('proguard-android-optimize.txt'), 'proguard-rules.pro'
        }
    }

}

dependencies {
    implementation project(path: ':lib-utils')
    implementation project(path: ':lib-network')
    implementation project(path: ':lib-ui')
    implementation project(path: ':lib-banner')
    implementation 'androidx.lifecycle:lifecycle-extensions:2.1.0'
    implementation 'com.shuyu:GSYVideoPlayer:7.1.1'
    implementation 'com.github.chrisbanes:PhotoView:2.0.0'
    implementation 'com.smartTop:jd-address:1.0.3'
    implementation 'liji.library.dev:citypickerview:5.1.0'
    implementation 'com.zhihu.android:matisse:0.5.3-beta3'
    implementation 'com.hjq:xxpermissions:6.0'
    implementation 'com.contrarywind:Android-PickerView:4.1.9'
    implementation 'com.tencent.bugly:crashreport:3.1.0'
    implementation 'com.acker:simplezxing:1.5'
    implementation 'com.zxn.calendar:calendar-select:1.0.0'
    implementation 'com.tencent.mm.opensdk:wechat-sdk-android-with-mta:5.3.1'
    implementation 'cn.qqtheme.framework:WheelPicker:latest.release'
    implementation 'com.alibaba:fastjson:1.2.17'
    implementation files('libs/jsoup-1.13.1.jar')
}
