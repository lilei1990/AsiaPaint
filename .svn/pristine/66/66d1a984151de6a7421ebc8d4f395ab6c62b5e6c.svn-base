<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/bg_rectangle_ffffff_8"
            android:gravity="center"
            android:text="我的店铺码"
            android:textColor="@color/color_333333"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_ffffff_8"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="1px"
                android:background="@color/color_999999" />

            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="183dp"
                android:layout_height="183dp"
                android:layout_marginTop="14dp"
                android:background="@color/color_F5F5F5" />

            <TextView
                android:id="@+id/tv_store_code_share"
                android:layout_width="169dp"
                android:layout_height="30dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="27dp"
                android:text="分享给好友"
                android:gravity="center"
                android:background="@drawable/bg_btn_dialog_message_sure"
                android:textColor="@color/color_FFFFFF"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_store_code_close"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            android:src="@mipmap/ic_store_code_close"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>